<!-- Chapter should have id that is short version of title -->
<chapter id="XMLSampleChapter">
  <title> Fiona's Sample XML document </title>
  <abstract>
    <para>
      <informaltable frame="all">
        <tgroup cols="2">
          <colspec colname="c1" colnum="1" colwidth="1.0*"/>
          <colspec colname="c2" colnum="2" colwidth="2.0*"/>
          <thead>
	    <row>
	      <entry namst="c1" nameend="c2">Overview:</entry>
            </row>
          </thead>
          <tbody>
            <row>
              <entry>
                <emphasis role="bold">Goal</emphasis>
              </entry>
              <entry>
	        Start with action verb....
              </entry>
            </row>
            <row>
	      <entry>
	        <emphasis role="bold">Objectives</emphasis>
              </entry>
              <!-- List Chapter Objectives -->
              <entry>
	        <para>
	          <itemizedlist>
	            <listitem><para>Fiona's First Objective</para></listitem> 		  
	            <listitem><para>Fiona's Second Objective</para></listitem> 		  
	          </itemizedlist>   
                </para>
	      </entry>
            </row>
            <row>
	      <entry>
	        <emphasis role="bold">Sections</emphasis>
  	      </entry>
              <entry>
		<!-- Enter lecture section titles here, don't list guided exercise titles, 
		     should be a 1-1 match with performance objectives -->	     
		<itemizedlist>
		  <listitem><para>First Section (and Guided Exercise)</para></listitem>
		  <listitem><para>Second Section (and Guided Exercise)</para></listitem>
		</itemizedlist>
	      </entry>
            </row>
            <row>
              <entry>
                <emphasis role="bold">Lab</emphasis>
              </entry>
              <!-- Enter Lab Tile -->
              <entry>
	        <itemizedlist>
	          <listitem><para> Fiona's Lab</para></listitem>
	        </itemizedlist>
	      </entry>
            </row>
          </tbody>
        </tgroup>
      </informaltable>
    </para>
  </abstract>
</chapter>  
